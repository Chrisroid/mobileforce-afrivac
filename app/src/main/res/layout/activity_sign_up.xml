<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dimension_15dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="1279dp"
            android:orientation="vertical"
            android:padding="@dimen/dimension_30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dimension_10dp"
                    android:src="@drawable/logo_black" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="@dimen/dimension_10dp"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorBlack"
                    android:textSize="40sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/username_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins"
                android:text="@string/username"
                android:textAppearance="@style/username" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/sign_up_circular"
                android:inputType="text"
                android:paddingLeft="@dimen/dimension_15dp"
                android:paddingTop="@dimen/dimension_10dp"
                android:paddingRight="@dimen/dimension_15dp"
                android:paddingBottom="@dimen/dimension_10dp"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/username_name"
                app:layout_constraintTop_toBottomOf="@+id/username_name" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins"
                android:text="@string/email"
                android:textAppearance="@style/username" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/sign_up_circular"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/dimension_15dp"
                android:paddingTop="@dimen/dimension_10dp"
                android:paddingRight="@dimen/dimension_15dp"
                android:paddingBottom="@dimen/dimension_10dp"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/poppins"
                android:text="@string/phone"
                android:textAppearance="@style/username"
                app:layout_constraintStart_toStartOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/sign_up_circular"
                android:inputType="phone"
                android:paddingLeft="@dimen/dimension_15dp"
                android:paddingTop="@dimen/dimension_10dp"
                android:paddingRight="@dimen/dimension_15dp"
                android:paddingBottom="@dimen/dimension_10dp"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/poppins"
                android:text="@string/country"
                android:textAppearance="@style/username"
                app:layout_constraintStart_toStartOf="@+id/phone_number"
                app:layout_constraintTop_toBottomOf="@+id/phone_number" />

            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/sign_up_circular"
                android:inputType="text"
                android:paddingLeft="@dimen/dimension_15dp"
                android:paddingTop="@dimen/dimension_10dp"
                android:paddingRight="@dimen/dimension_15dp"
                android:paddingBottom="@dimen/dimension_10dp"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/poppins"
                android:text="@string/password"
                android:textAppearance="@style/username"
                app:layout_constraintStart_toStartOf="@+id/country"
                app:layout_constraintTop_toBottomOf="@+id/country" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_up_circular"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dimension_15dp"
                android:paddingTop="@dimen/dimension_10dp"
                android:paddingRight="@dimen/dimension_15dp"
                android:paddingBottom="@dimen/dimension_10dp"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/poppins"
                android:text="@string/confirmpassword"
                android:textAppearance="@style/username"
                app:layout_constraintStart_toStartOf="@+id/password"
                app:layout_constraintTop_toBottomOf="@+id/password" />


            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/sign_up_circular"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dimension_15dp"
                android:paddingTop="@dimen/dimension_10dp"
                android:paddingRight="@dimen/dimension_15dp"
                android:paddingBottom="@dimen/dimension_10dp"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:layout_marginBottom="@dimen/dimension_10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_10dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/termsandcondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/dimension_10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/terms_and_agreement"
                    android:textColor="#464646"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/signup_with_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_drawable02"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:layout_marginBottom="@dimen/dimension_15dp"
                android:paddingStart="@dimen/dimension_40dp"
                android:paddingTop="@dimen/dimension_30dp"
                android:paddingBottom="@dimen/dimension_30dp"
                android:paddingEnd="@dimen/dimension_10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dimension_10dp"
                    android:layout_marginEnd="@dimen/dimension_30dp"
                    android:src="@drawable/google" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/signUpGoogle"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signup_with_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_drawable02"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:layout_marginBottom="@dimen/dimension_15dp"
                android:paddingStart="@dimen/dimension_40dp"
                android:paddingTop="@dimen/dimension_30dp"
                android:paddingBottom="@dimen/dimension_30dp"
                android:paddingEnd="@dimen/dimension_5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/dimension_10dp"
                    android:layout_marginEnd="@dimen/dimension_15dp"
                    android:src="@drawable/facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/signUpFacebook"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorLightGrey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/or"
                    android:textAlignment="center"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorLightGrey" />
            </LinearLayout>

            <TextView
                android:id="@+id/signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:background="@drawable/circular_drawable03"
                android:paddingTop="@dimen/dimension_15dp"
                android:paddingBottom="@dimen/dimension_15dp"
                android:text="@string/signUp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorWhite"
                android:textSize="21sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimension_25dp"
                android:layout_marginBottom="@dimen/dimension_25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/alreadyHaveAccount"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorGrey"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/toSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/signIn"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlue"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>